{
	"version": 3,
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"settings": {
		"appearanceTools": true,
		"useRootPaddingAwareAlignments": true,
		"layout": {
			"contentSize": "768px",
			"wideSize": "1216px"
		},
		"color": {
			"defaultDuotone": false,
			"defaultGradients": false,
			"defaultPalette": false,
			"palette": [
				{
					"name": "Base",
					"slug": "base",
					"color": "#ffffff"
				},
				{
					"name": "Base / Two",
					"slug": "base-2",
					"color": "#FAFAFA"
				},
				{
					"name": "Base / Three",
					"slug": "base-3",
					"color": "#F5F5F5"
				},
				{
					"color": "#0A0A0A",
					"name": "Contrast",
					"slug": "contrast"
				},
				{
					"color": "#262626",
					"name": "Contrast / Two",
					"slug": "contrast-2"
				},
				{
					"name": "Contrast / Three",
					"slug": "contrast-3",
					"color": "#525252"
				},
				{
					"color": "#4f46e5",
					"name": "Accent",
					"slug": "accent"
				}
			]
		},
		"typography": {
			"dropCap": false,
			"fluid": true,
			"writingMode": true,
			"lineHeight": true,
			"defaultFontSizes": false,
			"fontFamilies": [
				{
					"fontFace": [
						{
							"fontFamily": "Mona Sans",
							"fontStretch": "normal",
							"fontStyle": "normal",
							"fontWeight": "300 900",
							"src": [
								"file:./static/fonts/mona-sans/Mona-Sans.woff2"
							]
						}
					],
					"fontFamily": "\"Mona Sans\", ui-sans-serif",
					"name": "Mona Sans",
					"slug": "body"
				},
				{
					"fontFamily": "-apple-system, BlinkMacSystemFont, avenir next, avenir, segoe ui, helvetica neue, helvetica, Cantarell, Ubuntu, roboto, noto, arial, sans-serif",
					"name": "System Sans-serif",
					"slug": "system-sans-serif"
				}
			],
			"fontSizes": [
				{
					"fluid": {
						"min": ".825rem",
						"max": ".95rem"
					},
					"size": ".95rem",
					"slug": "x-small",
					"name": "Extra Small"
				},
				{
					"fluid": {
						"min": "0.813rem",
						"max": "0.875rem"
					},
					"size": "0.875rem",
					"slug": "small",
					"name": "Small"
				},
				{
					"fluid": {
						"min": "1rem",
						"max": "1.25rem"
					},
					"size": "1.25rem",
					"slug": "base",
					"name": "Base"
				},
				{
					"fluid": {
						"min": "1.365rem",
						"max": "1.65rem"
					},
					"size": "1.65rem",
					"slug": "medium",
					"name": "Medium"
				},
				{
					"fluid": {
						"min": "1.75rem",
						"max": "2.75rem"
					},
					"size": "2.75rem",
					"slug": "large",
					"name": "Large"
				},
				{
					"fluid": {
						"min": "2.425rem",
						"max": "3.5rem"
					},
					"size": "3.5rem",
					"slug": "x-large",
					"name": "Extra Large"
				},
				{
					"fluid": {
						"min": "2.5rem",
						"max": "4.3875rem"
					},
					"size": "4.3875rem",
					"slug": "xx-large",
					"name": "Extra Extra Large"
				}
			]
		},
		"spacing": {
			"spacingSizes": [
				{
					"name": "Small",
					"size": "clamp(.5rem, 2.5vw, 1rem)",
					"slug": "small"
				},
				{
					"name": "Medium",
					"size": "clamp(1.5rem, 4vw, 3rem)",
					"slug": "medium"
				},
				{
					"name": "Large",
					"size": "clamp(2rem, 5vw, 3rem)",
					"slug": "large"
				},
				{
					"name": "Extra Large",
					"size": "clamp(3rem, 7vw, 5rem)",
					"slug": "x-large"
				},
				{
					"name": "2xl",
					"size": "clamp(4rem, 9vw, 7rem)",
					"slug": "xx-large"
				},
				{
					"name": "3xl",
					"size": "clamp(5rem, 12vw, 9rem)",
					"slug": "xxx-large"
				},
				{
					"name": "4xl",
					"size": "clamp(6rem, 14vw, 13rem)",
					"slug": "xxxx-large"
				},
				{
					"name": "5xl",
					"size": "clamp(7rem, 16vw, 15rem)",
					"slug": "xxxxx-large"
				}
			],
			"units": ["px", "em", "rem", "vh", "vw", "%"]
		},
		"custom": {
			"transition": "300ms ease-in-out",
			"siteContentRadius": "40px",
			"fontWeight": {
				"thin": 100,
				"extra-light": 200,
				"light": 300,
				"regular": 425,
				"medium": 500,
				"semi-bold": 600,
				"bold": 700,
				"extra-bold": 800,
				"black": 900
			},
			"lineHeight": {
				"none": 1,
				"tight": 1.1,
				"snug": 1.2,
				"body": 1.5,
				"relaxed": 1.625,
				"loose": 2
			}
		}
	},
	"styles": {
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--body)",
			"fontStyle": "normal",
			"fontWeight": "400",
			"lineHeight": "1.55"
		},
		"spacing": {
			"blockGap": "var(--wp--preset--spacing--small)",
			"padding": {
				"top": "0",
				"right": "var(--wp--preset--spacing--medium)",
				"bottom": "0",
				"left": "var(--wp--preset--spacing--medium)"
			}
		},
		"elements": {
			"button": {
				"color": {
					"background": "var(--wp--preset--color--contrast)",
					"text": "var(--wp--preset--color--base)"
				},
				"spacing": {
					"padding": {
						"top": "0.375em",
						"right": "1em",
						"bottom": "0.375em",
						"left": "1em"
					}
				},
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)",
					"fontWeight": "var(--wp--custom--font-weight--semi-bold)"
				},
				":hover": {
					"color": {
						"background": "var(--wp--preset--color--accent)",
						"text": "var(--wp--preset--color--base)"
					}
				}
			},
			"h1": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--x-large)",
					"lineHeight": "var(--wp--custom--line-height--snug)",
					"letterSpacing": "-0.025em"
				}
			},
			"h2": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--large)",
					"lineHeight": "var(--wp--custom--line-height--snug)"
				}
			},
			"h3": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--medium)"
				}
			},
			"h4": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--base)",
					"letterSpacing": "0.05em"
				}
			},
			"h5": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)",
					"letterSpacing": "0.05em"
				}
			},
			"h6": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--x-small)",
					"letterSpacing": "0.05em"
				}
			},
			"heading": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--body)",
					"fontWeight": "var(--wp--custom--font-weight--normal)",
					"lineHeight": "var(--wp--custom--line-height--body)"
				}
			},
			"link": {
				"color": {
					"text": "var(--wp--preset--color--contrast)"
				}
			}
		},
		"blocks": {
			"core/site-title": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--base)",
					"fontWeight": "var(--wp--custom--font-weight--semi-bold)",
					"lineHeight": "var(--wp--custom--line-height--none)",
					"letterSpacing": "0"
				},
				"elements": {
					"link": {
						"typography": {
							"textDecoration": "none"
						}
					}
				}
			},
			"core/list": {
				"spacing": {
					"padding": {
						"left": "var(--wp--preset--spacing--small)"
					}
				}
			},
			"core/post-title": {
				"elements": {
					"link": {
						"typography": {
							"textDecoration": "none"
						},
						":hover": {
							"color": {
								"text": "var(--wp--preset--color--accent)"
							}
						}
					}
				}
			}
		}
	},
	"templateParts": [
		{
			"name": "header",
			"title": "Header",
			"area": "header"
		},
		{
			"name": "footer",
			"title": "Footer",
			"area": "footer"
		}
	]
}
